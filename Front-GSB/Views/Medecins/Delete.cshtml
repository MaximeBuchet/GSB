@model Model.Medecin

@{
    ViewBag.Title = "Supprimer";
}

<h2>Supprimer</h2>

<h3>Êtes-vous sûr de vouloir supprimer ce médecin ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Département")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departement.dep_region)
        </dd>

        <dt>
            @Html.DisplayName("Nom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.med_nom)
        </dd>

        <dt>
            @Html.DisplayName("Prénom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.med_prenom)
        </dd>

        <dt>
            @Html.DisplayName("Adresse")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.med_addresse)
        </dd>

        <dt>
            @Html.DisplayName("Téléphone")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.med_telephone)
        </dd>

        <dt>
            @Html.DisplayName("Spécialité")
        </dt>

        <dd>
            @if (Model.med_specialite.HasValue)
            {
                if (Model.med_specialite.Value)
                {
                    @Html.DisplayName("Oui")
                }
                else
                {
                    @Html.DisplayName("Non")
                }
            }
            else
            {
                @Html.DisplayName("N/A")
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
        </div>

            @Html.ActionLink("Liste médecins", "Index")
    }
</div>
