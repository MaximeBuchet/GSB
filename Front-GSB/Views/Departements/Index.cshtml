@model IEnumerable<Model.Departement>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des départements</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table class="table">
    <tr>
        <th class="text-center">
            @Html.DisplayName("N°")
        </th>
        <th>
            @Html.DisplayName("Région")
        </th>
        <th>
            @Html.DisplayName("Département")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.dep_numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dep_region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dep_nom)
        </td>
        <td>
            @Html.ActionLink("Voir médecin", "Details", new { id=item.dep_numero })
        </td>
    </tr>
}

</table>
