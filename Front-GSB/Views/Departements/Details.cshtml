@model Model.Departement

@{
    ViewBag.Title = "Détails de " + @Html.DisplayFor(model => model.dep_nom);
}

<h2>Liste des médecin du département : @Html.DisplayFor(model => model.dep_nom)</h2>
<h4>@Html.DisplayFor(model => model.dep_region)</h4>
<hr />

<div>
    <h4>Departement</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.dep_region)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dep_region)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dep_nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dep_nom)
        </dd>

    </dl>
</div>

@if (Model.Medecins.Count != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Département")
            </th>
            <th>
                @Html.DisplayName("Nom")
            </th>
            <th>
                @Html.DisplayName("Prénom")
            </th>
            <th>
                @Html.DisplayName("Adresse")
            </th>
            <th>
                @Html.DisplayName("Téléphone")
            </th>
            <th>
                @Html.DisplayName("Spécialité")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Medecins)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Departement.dep_nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.med_nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.med_prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.med_addresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.med_telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.med_specialite)
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.med_id }) |
                    @Html.ActionLink("Détail", "Details", new { id = item.med_id }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.med_id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>Il n' y a pas de medecins dans ce département</p>
}


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.dep_numero }) |
    @Html.ActionLink("Back to List", "Index")
</p>
